<?xml version="1.0"?>
<launch>
	<arg name="debug" default="false"/>
	<arg name="headless" default="false"/>
	<arg name="paused" default="false"/>
	<arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="throttled" default="false"/>

	<arg name="robot_env" default="ipa-production-plant"/>
	<arg name="moving_object_bool" default="$(optenv ROBOT_MOVING_OBJECT_BOOL false)"/>
	<arg name="moving_object_name" default="$(optenv ROBOT_MOVING_OBJECT_NAME forklift)"/>

	<arg name="static_laser_topic" default="/static_laser/scan_raw"/>

  <node pkg="tf" type="static_transform_publisher" name="static_laser_broadcaster_01" args="19.08 -1.5 0.1 3.14 0 0 map static_laser_01_link 100" />

  <node pkg="tf" type="static_transform_publisher" name="static_laser_broadcaster_02" args="27.08 -1.5 0.1 3.14 0 0 map static_laser_02_link 100" />

	<remap from="/static_laser_01/scan_raw" to="$(arg static_laser_topic)"/>
	<remap from="/static_laser_02/scan_raw" to="$(arg static_laser_topic)"/>

	<!-- start gazebo with empty world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="worlds/empty.world"/>
		<arg name="debug" value="$(arg debug)" />
		<arg name="headless" value="$(arg headless)"/>
		<arg name="paused" value="$(arg paused)" />
		<arg name="use_sim_time" value="$(arg use_sim_time)" />
		<arg name="gui" value="$(arg gui)" />
		<!--arg name="throttled" value="$(arg throttled)" /-->
	</include>


	<include file="$(find cob_gazebo_worlds)/launch/world_urdf.launch">
		<arg name="robot_env" value="$(arg robot_env)"/>
		<arg name="publish_world_state" value="false"/>
	</include>



	<!-- send objects locations to parameter server -->
	<include file="$(find cob_default_env_config)/upload_object_locations.launch">
		<arg name="robot_env" value="$(arg robot_env)" />
	</include>

	<!-- spawn all objects -->
	<node name="spawn_object" pkg="cob_bringup_sim" type="spawn_object.py" args="all" output="screen"/>

	<!-- spawn & move 'moving object' around 
				(r2d2/forkllift -> depends on environment variable ROBOT_MOVING_OBJECT) -->
	<node if="$(arg moving_object_bool)" name="spawn_moving_object" pkg="gazebo_ros" type="spawn_model" args="-urdf -file $(find cob_gazebo_objects)/objects/$(arg moving_object_name).urdf -x 6.5 -y 7.5 -model $(arg moving_object_name)" output="screen" />
	<node if="$(arg moving_object_bool)" name="moving_object" pkg="cob_bringup_sim" type="move_object.py" args="--mode=polygon --name=$(arg moving_object_name) --velocity=0.8 --polygon='[[6.5,7.5],[19.5,7.5],[19.5,-8],[6.5,-8]]'" output="screen"/>

</launch>
